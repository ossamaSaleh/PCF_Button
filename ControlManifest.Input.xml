<?xml version="1.0" encoding="utf-8" ?>
<manifest>
  <control namespace="OS.Controls" constructor="ButtonPCF" version="0.0.1" display-name-key="ButtonPCF" description-key="Trigger Button" control-type="standard">
    
    <external-service-usage enabled="false" />

    <!-- Input property for button label -->
    <property 
        name="buttonLabel" 
        display-name-key="buttonlabel_key" 
        of-type="SingleLine.Text" 
        usage="bound" 
        required="true" />

    <!-- Optional input for JS function name -->
    <property 
        name="jsFunction" 
        display-name-key="jsFunction_Key" 
        of-type="SingleLine.Text" 
        usage="input" 
        required="false" />

    <!-- Output property: bound to SingleLine.Text field on form -->
    <property
        name="triggerOutput"
        display-name-key="TriggerOutput_Label"
        of-type="SingleLine.Text"
        usage="bound"
        required="true" />

    <resources>
      <code path="index.ts" order="1"/>
    </resources>

    <feature-usage>
      <uses-feature name="FormFactor" required="true" />
      <uses-feature name="WebAPI" required="true" />
      <uses-feature name="Utility" required="true" />
      <uses-feature name="ClientAPI" required="true" />
    </feature-usage>

  </control>
</manifest>
